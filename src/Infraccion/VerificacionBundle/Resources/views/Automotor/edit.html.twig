{% extends '::layout.html.twig' %}
{% block id 'mod_Automotor' %}
{% block title %}
{{ parent() }} - Automotor {{ 'views.edit.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<section id="form_Automotor">
    {% embed 'box.html.twig' with {'box_titulo': 'Editar Automotor' } %}
    {% block box_contenido %}
    <div class="row-fluid">
        <div class="span12" style="margin-top: 0;">
            {{ wo_render_breadcrumbs() }}

            {% for type, flashMessages in app.session.flashbag.all() %}
             {% for flashMessage in flashMessages %} 
             <div class='alert alert-{{ type }}'> 
             {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
             </div> 
             {% endfor %} 
            {% endfor %} 
        </div>
    </div>

    <div class="row-fluid" style="margin-top: 0;">
        <div class="span12" style="zoom: 1; overflow: auto; margin-top: -8px;">
            <form class="form-horizontal"
                  action="{{ path('automotor_update', { 'id': entity.id }) }}"
                  method="post" {{ form_enctype(edit_form) }}>
                {{ form_widget(edit_form) }}
                <p>
                    <button type="submit"
                            class="btn btn-success">{{ 'views.edit.editbutton'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                </p>
            </form>
        </div>
    </div>
        <div class="row-fluid">
    <div class="offset1 span2">
        <a class="btn" href="{{ path('automotor') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('automotor_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>    {% endblock box_contenido %}
    {% endembed %}
</section>
{% endblock %}