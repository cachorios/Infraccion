{% extends "::layout.html.twig" %}
{% block id  'mod_automotor' %}

    {% block title %}
        {{ parent() }} - Automotor {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
    {% endblock %}


    {% block page %}
        <section id="automotor">

            {% embed 'box.html.twig' with {'box_titulo': 'Exportar datos para actualización de dominio.' } %}
            {% block rigth_title %}
            {% endblock %}
            {% block box_contenido %}
            <div class="row-fluid">
                <div class="span12" style="margin-top: 0;">
                    <section id="Automotor">
                        {{ wo_render_breadcrumbs() }}
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class='alert alert-{{ type }}'>
                                    {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="row-fluid">
                            <div class="span12">

                                <div class="alert alert-block">
                                    <blockquote>
                                        <strong>
                                            Nota: La exportación se realiza en un archivo Excel 2007, permitiendo un
                                            numero maximo de 10000 registros.
                                        </strong>
                                    </blockquote>
                                </div>

                                <div class="form-actions">
                                    <a href="{{ path('automotor_exportar_exportar') }}" class="btn btn-success brn_importar" type="submit">Procesar.</a>
                                </div>

                            </div>
                        </div>
                    </section>
                </div>

                {% endblock box_contenido %}
                {% endembed %}
        </section>

    {% endblock %}