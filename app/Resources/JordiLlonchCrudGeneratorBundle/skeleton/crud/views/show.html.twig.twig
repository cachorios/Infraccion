{{ "{% extends '::layout.html.twig' %}" }}
{{ "{% block id 'mod_"~ entity ~ "' %}" }}
{{ "{% block title %}" }}
{{ "{{ parent() }} - " ~ entity ~ " {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}" }}
{{ "{% endblock %}" }}

{{ "{% block page %}" }}

<section id="view_{{ entity }}">
    {{ "{% embed 'box.html.twig' with {'box_titulo': 'Ver "~ entity ~"' } %}" }}
    {{ "{% block box_contenido %}" }}
    <div class="row-fluid">
        <div class="span12" style="margin-top: 0;">
            {{ "{{ wo_render_breadcrumbs() }}" }}

            {{ "{% for type, flashMessages in app.session.flashbag.all() %}" }}
            {{ " {% for flashMessage in flashMessages %} " }}
            {{ " <div class='alert alert-{{ type }}'> " }}
            {{ " {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}" }}
            {{ " </div> " }}
            {{ " {% endfor %} " }}
            {{ "{% endfor %} " }}
        </div>
    </div>


    <div class="row-fluid" style="margin-top: 0;">
        <div class="span12" style="zoom: 1; overflow: auto; margin-top: -8px;">
            <form class="form-horizontal">
                <fieldset>
                    {%- for field, metadata in fields %}
                        <div class="control-group">
                            <label class="control-label">{{ field|capitalize }}</label>

                            <div class="controls">
                                {%- if metadata.type in ['date', 'datetime'] %}
                                    <span class="input-xlarge uneditable-input">{{ '{{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}' }}</span>
                                {%- else %}
                                    <span class="input-xlarge uneditable-input">{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</span>
                                {%- endif %}
                            </div>
                        </div>
                    {%- endfor %}
                </fieldset>
            </form>
        </div>
    </div>

    {% set hide_edit, hide_delete = false, false %}
    {% include 'views/others/record_actions.html.twig.twig' %}
    {{ "{% endblock box_contenido %}" }}
    {{ "{% endembed %}" }}
</section>
{{ "{% endblock %}" }}