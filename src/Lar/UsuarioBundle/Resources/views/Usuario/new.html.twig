{% extends '::layout.html.twig' %}
{% block id  "mod_usuario" %}

    {% block title %}
        {{ parent() }} - Usuario {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
    {% endblock %}

    {#Para limpiar la cabecera el header sin contenido#}
    {% block header %}{% endblock header %}

    {% block page %}
        <section>

            {% embed 'box.html.twig' with {'box_titulo': 'Agregar un usuario al sistema' } %}
            {% block box_contenido %}
                <div class="row-fluid">
                    <div class="span12" style="margin-top: 0;">
                        {{ wo_render_breadcrumbs() }}

                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class='alert alert-{{ type }}'>
                                    {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>

                <div class="row-fluid">


                    <div class="span12">


                        <form class="form-horizontal" action="{{ path('usuario_create') }}"
                              method="post" {{ form_enctype(edit_form) }}>

                            {% include 'UsuarioBundle:Usuario:_form.html.twig' %}

                            <div class="form-actions">
                                <button type="submit"
                                        class="btn btn-success">{{ 'views.new.create'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="float-left">
                        <a class="btn" href="{{ path('usuario') }}">
                            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                        </a>
                    </div>
                </div>
            {% endblock box_contenido %}
            {% endembed %}

        </section>
    {% endblock %}