{% extends "::layout.html.twig" %}
{% block id  'mod_automotor' %}

    {% block title %}
        {{ parent() }} - Automotor {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
    {% endblock %}


{% block page %}
    <section id="automotor">
        {% form_theme filterForm with ['LexikFormFilterBundle:Form:form_div_layout.html.twig' ] %}
        {% embed 'box.html.twig' with {'box_titulo': 'Lista de Automotores' } %}
            {% block rigth_title %}
                <a class="btn dropdown-toggle btn-mini" data-toggle="collapse"
                   data-target="#filters">
                    {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    <span class="caret"></span>
                </a> &nbsp;
            {% endblock %}
            {% block box_contenido %}
                <div class="row-fluid" >
                    <div class="span12" style="margin-top: 0;">
                        <section id="Automotor">
                            {{ wo_render_breadcrumbs() }}
                            {% for type, flashMessages in app.session.flashbag.all() %}
                                {% for flashMessage in flashMessages %}
                                    <div class='alert alert-{{ type }}'>
                                        {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            {% if form_errors(filterForm) %}

                                <div class="alert alert-block alert-error fade in form-errors">
                                    {{ form_errors(filterForm) }}
                                </div>
                            {% endif %}
                            &nbsp;


                            <div id="filters" class="collapse">

                                <form class="well" action="{{ path('automotor') }}"
                                      method="post" {{ form_enctype(filterForm) }}>
                                    {{ form_row(filterForm.id) }}
                                    {{ form_row(filterForm.dominio) }}
                                    {{ form_row(filterForm.marca) }}
                                    {{ form_row(filterForm.modelo) }}
                                    {{ form_row(filterForm.dni) }}
                                    {{ form_row(filterForm.cuitCuil) }}
                                    {{ form_row(filterForm.nombre) }}
                                    {{ form_row(filterForm.domicilio) }}
                                    {{ form_row(filterForm.codigoPostal) }}
                                    {{ form_row(filterForm.provincia) }}
                                    {{ form_row(filterForm.localidad) }}
                                    {{ form_rest(filterForm) }}

                                    <p>
                                        <button type="submit" name="filter_action"
                                                value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                                        <button type="submit" name="filter_action"
                                                value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                                    </p>
                                </form>
                            </div>

                            <div class="row-fluid" style="margin-top: 0;">

                                <div class="span12" style="zoom: 1; overflow: auto; margin-top: -8px;">

                                    <table class="table table-striped table-bordered table-condensed">
                                        <thead>
                                        <tr>
                                            <th>Dominio</th>
                                            <th>Marca</th>
                                            <th>Modelo</th>
                                            <th>CUIL/CUIT</th>
                                            <th>Nombre</th>
                                            <th>Domicilio</th>
                                            <th>CÃ³d.Postal</th>
                                            <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td>
                                                    <a href="{{ path('automotor_show', { 'id': entity.id }) }}">{{ entity.dominio }}</a>
                                                </td>
                                                <td>{{ entity.marca }}</td>
                                                <td>{{ entity.modelo }}</td>
                                                <td>{{ entity.cuitCuil }}</td>
                                                <td>{{ entity.nombre }}</td>
                                                <td>{{ entity.domicilio }}</td>
                                                <td>{{ entity.codigoPostal }}</td>
                                                <td>
                                                    <a class="btn btn-mini"
                                                       href="{{ path('automotor_show', { 'id': entity.id }) }}">
                                                        {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>
                                                    <a class="btn btn-mini" href="{{ path('automotor_edit', { 'id': entity.id }) }}">
                                                        {{ 'views.actions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                    </div>

                    <div class="row-fluid">

                        <div class="span12" style="margin-top: 0;">
                            {{ pagerHtml|raw }}
                        </div>

                    </div>

                    </section>
                </div>

            {% endblock box_contenido %}
        {% endembed %}
    </section>
{% endblock %}