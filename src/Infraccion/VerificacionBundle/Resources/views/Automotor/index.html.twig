{% extends "::base.html.twig" %}
{% block id  'mod_Automotor' %}
    {% block title %}
        {{ parent() }} - Automotor {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
    {% endblock %}

    {% block page %}

        <section id="Automotor">
            <header>
                <h1>Automotor {{ 'views.index.list'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    <div class="filters-right">
                        <a class="btn dropdown-toggle btn-mini" data-toggle="collapse" data-target="#filters">
                            {{ 'views.index.filters'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                            <span class="caret"></span>
                        </a> &nbsp;
                    </div>
                </h1>
            </header>
            {{ wo_render_breadcrumbs() }}
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class='alert alert-{{ type }}'>
                        {{ flashMessage|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="span12">
                {% if form_errors(filterForm) %}
                    <div class="alert alert-block alert-error fade in form-errors">
                        {{ form_errors(filterForm) }}
                    </div>
                {% endif %}
                &nbsp;
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <div id="filters" class="collapse">

                        <form class="well" action="{{ path('automotor') }}"
                              method="post" {{ form_enctype(filterForm) }}>
                            {{ form_row(filterForm.id) }}
                            {{ form_row(filterForm.dominio) }}
                            {{ form_row(filterForm.marca) }}
                            {{ form_row(filterForm.modelo) }}
                            {{ form_row(filterForm.dni) }}
                            {{ form_row(filterForm.cuitCuil) }}
                            {{ form_row(filterForm.nombre) }}
                            {{ form_row(filterForm.domicilio) }}
                            {{ form_row(filterForm.codigoPostal) }}
                            {{ form_row(filterForm.provincia) }}
                            {{ form_row(filterForm.localidad) }}
                            {{ form_rest(filterForm) }}

                            <p>
                                <button type="submit" name="filter_action"
                                        value="reset">{{ 'views.index.reset'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                                <button type="submit" name="filter_action"
                                        value="filter">{{ 'views.index.filter'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
                            </p>
                        </form>
                    </div>
                </div>

                <div class="span12">
                    <div class="data-container" style="zoom: 1; overflow: auto;">
                        <table class="table table-striped table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Dominio</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Dni</th>
                                <th>Cuitcuil</th>
                                <th>Nombre</th>
                                <th>Domicilio</th>
                                <th>Codigopostal</th>
                                <th>Provincia</th>
                                <th>Localidad</th>
                                <th>{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>
                                        <a href="{{ path('automotor_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                    </td>
                                    <td>{{ entity.dominio }}</td>
                                    <td>{{ entity.marca }}</td>
                                    <td>{{ entity.modelo }}</td>
                                    <td>{{ entity.dni }}</td>
                                    <td>{{ entity.cuitCuil }}</td>
                                    <td>{{ entity.nombre }}</td>
                                    <td>{{ entity.domicilio }}</td>
                                    <td>{{ entity.codigoPostal }}</td>
                                    <td>{{ entity.provincia }}</td>
                                    <td>{{ entity.localidad }}</td>
                                    <td>
                                        <a class="btn btn-mini"
                                           href="{{ path('automotor_show', { 'id': entity.id }) }}">
                                            {{ 'views.actions.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
                                        </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <div class="row-fluid">

                <div class="span8">
                    {{ pagerHtml|raw }}
                </div>

            </div>

        </section>


    {% endblock %}